<h1>burgers App</h1>

<p>Manage burgers with this app</p>

<!-- Pass in data from server.js -->
<ul>
    {{#each burgers}}
    <li>
        <p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">burger:</span> {{this.burger}}</p>
        <p><span class="label">Author:</span> {{this.author}}</p>

        <button data-id="{{this.id}}" class="delburger">Delete</button>

        <a href="/{{this.id}}">Update this burger</a>
    </li>
    {{/each}}
</ul>

<h2>Add a burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="auth">Author:</label>
        <input type="text" id="auth" name="author">
    </div>

    <div class="form-group">
        <label for="quo">burger:</label>
        <textarea id="quo" name="burger" rows="8" cols="40"></textarea>
    </div>

    <button type="submit">Add burger</button>
</form>